@model CrossOver.Models.NewsArticle

@{
    ViewBag.Title = "Edit News Article";
}

<h3>Edit your article</h3>

@using (Html.BeginForm("Edit", "News", null, FormMethod.Post, new { @class = "form-horizontal marginleft15p" }))
{ 
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ArticleId)
    <div class="form-group">
        <label class="control-label ">News Title</label>
        <div class="row">
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label ">Image Tile</label>
        <div class="row">
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.ImageTile, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">News Content</label>
        <div>
            @Html.EditorFor(m => m.FormattedContent, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FormattedContent)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">News Category</label>
        <div>
            @Html.DropDownListFor(model => model.CategoryId, ViewBag.NewsCategories as SelectList, String.Empty)
            @Html.ValidationMessageFor(m => m.CategoryId)
        </div>
    </div>
    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
